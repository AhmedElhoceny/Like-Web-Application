@model LikeFinal_Version.Models.Users

@{
    ViewData["Title"] = "Profile";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Style/Style.css">
    <link rel="icon" href="~/Logos/Like+.png">
    <title>Like+</title>
</head>
<body class="ProfileClass" >
    <div class="PlaceHolder" onclick="HideAllForms2()"></div>
    <div class="NavStatistics">
        <img src="~/Logos/Like.png" />
        <a asp-action="Index">LogOut</a>
    </div>
    <div class="Statistics_YouTube">
        <div class="ControllBar" style="opacity: 0;">
            <div class="BigCon">
                <div class="Coins">
                    <img src="./Imgs/dollar.png">
                    <p>3000</p>
                </div>
                <button onclick="ShowPurshaseCoins()">AddCoums</button>
            </div>
        </div>
        <div class="CentralBodyToContain">
            <div class="CenterContainer">
                <div class="Youtube_Views" style="display: none;">
                    <div class="TakeAction">
                        <img src="./Imgs/video-play-button.png">
                    </div>
                    <div class="AddItems" style="overflow-y: auto;">
                        <button>AddItem</button>
                        <div class="ItemContent">
                            <img src="./Imgs/Data.png">
                            <p>Views : 250</p>
                        </div>
                        <div class="ItemContent">
                            <img src="../Imgs/Data.png">
                            <p>Views : 250</p>
                        </div>
                    </div>
                </div>
                <div class="Youtube_Likes" style="display: none;">
                    <div class="TakeAction">
                        <img src="../Imgs/png-clipart-facebook-like-button-facebook-inc-facebook-text-hand.png">
                    </div>
                    <div class="AddItems" style="overflow-y: auto;">
                        <button>AddItem</button>
                        <div class="ItemContent">
                            <img src="../Imgs/Data.png">
                            <p>Likes : 250</p>
                        </div>
                        <div class="ItemContent">
                            <img src="../Imgs/Data.png">
                            <p>Likes : 250</p>
                        </div>
                        <div class="ItemContent">
                            <img src="../Imgs/Data.png">
                            <p>Likes : 250</p>
                        </div>
                        <div class="ItemContent">
                            <img src="../Imgs/Data.png">
                            <p>Likes : 250</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="Youtube_Comment" style="left: 2%;display: none;">
                <div class="TakeAction">
                    <img src="../Imgs/comments-1.png">
                </div>
                <div class="AddItems" style="overflow-y: auto;">
                    <button>AddItem</button>
                    <div class="ItemContent">
                        <img src="../Imgs/Data.png">
                        <p>Comments : 250</p>
                    </div>
                    <div class="ItemContent">
                        <img src="../Imgs/Data.png">
                        <p>Comments : 250</p>
                    </div>
                </div>
            </div>
            <div class="Youtube_Subscribe" style="left: 2%;display: none;">
                <div class="TakeAction">
                    <img src="../Imgs/Addsubscribe-1.png">
                </div>
                <div class="AddItems" style="overflow-y: auto;">
                    <button>AddItem</button>
                    <div class="ItemContent">
                        <img src="../Imgs/Data.png">
                        <p>Subscribe : 250</p>
                    </div>
                    <div class="ItemContent">
                        <img src="../Imgs/Data.png">
                        <p>Subscribe : 250</p>
                    </div>
                </div>
            </div>
            <div class="ProfileContent">
                <div class="ProfileData">
                    <img src="~/Profiles/Microsoft.AspNetCore.Http.Internal.FormFile@(Model.UserPhoto)">
                    <p>Name : @Model.UserName</p>
                    <p>Email : @Model.UserEmail</p>
                </div>
                <form class="ChangeData" asp-controller="Home" asp-action="ProfilePost">
                    <input required type="hidden" value="@Model.UserID" name="id" />
                    <input type="password" required placeholder="Current Password" name="CurrentPassword">
                    <input type="password" required placeholder="New Password" name="NewPassword">
                    <button type="submit">Edit</button>
                    <p style="        align-self: center;
        color: #fff;
        text-align: center;
        font-size: 20px;">Sharing Link :<span style="color: #385917;">http://localhost:53308/Home/ShareLink?id=@(Model.UserID)</span></p>
                </form>
            </div>
            <div class="ChooseActionIons" style="opacity: 0;">
                <a class="ChooseIcon1" ></a>
                <a class="ChooseIcon2" ></a>
                <a class="ChooseIcon3" ></a>
                <a class="ChooseIcon4" ></a>
            </div>
        </div>
    </div>
    <div class="Soon" style="display: none;">
        <p>Soon</p>
        <img src="../Imgs/icons8-coming-soon-50.png">
    </div>
    <div class="ControllFooter">
        <a class="ControlImage1" asp-action="YouTubeViews" asp-route-id="@Model.UserID"></a>
        <a class="ControlImage2" asp-controller="Home" asp-action="SoonView" asp-route-id="@Model.UserID"></a>
        <a class="ControlImage3" asp-controller="Home" asp-action="SoonView" asp-route-id="@Model.UserID"></a>
        <a class="ControlImage4" asp-controller="Home" asp-action="SoonView" asp-route-id="@Model.UserID"></a>
        <a class="ControlImage5"></a>
    </div>
    <form class="PutNumberCoins ShowDataForm">
        <input required type="number" placeholder="Add Coins">
        <button style="margin: auto;background-color: gold;">Buy</button>
    </form>
    <script src="./Scripts/Script.js"></script>
</body>
</html>